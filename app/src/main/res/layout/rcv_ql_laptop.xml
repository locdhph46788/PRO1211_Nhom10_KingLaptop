<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="20dp"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/iv_laptop"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="left|center"
        android:src="@drawable/laptop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="70dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thương hiệu: " />

            <TextView
                android:id="@+id/tv_thuong_hieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên: " />

            <TextView
                android:id="@+id/tv_ten_laptop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vivobook" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Năm sản xuất: " />

            <TextView
                android:id="@+id/tv_nam_san_xuat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2023" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá bán: " />

            <TextView
                android:id="@+id/tv_gia_ban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 $" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mô tả: " />
            <TextView
                android:id="@+id/tv_mo_ta"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Máy tính siêu cấp vip pro" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#FF5722"
        android:text="Sửa" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="70dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#FF5722"
        android:text="Xóa" />
</androidx.cardview.widget.CardView>